<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tzx.game2048">

    <application
        android:allowBackup="true"
        android:icon="@drawable/launch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Game2048">
        <activity android:name=".activities.HistoryMode"></activity>
        <activity android:name=".activities.customSelect" />
        <activity android:name=".activities.About" />
        <activity android:name=".activities.BaseMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>